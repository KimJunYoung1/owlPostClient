{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "env": {
    "node": true,
    "es6": true
  },
  "extends": "airbnb",
  "rules": {
    "react/jsx-filename-extension": [1, { "extensions": [".js", "jsx"] }],
    "jsx-a11y/accessible-emoji": "off",
    "arrow-parens": [2, "as-needed"],
    "no-restricted-syntax": ["error", "ForInStatement"]
  }
}
